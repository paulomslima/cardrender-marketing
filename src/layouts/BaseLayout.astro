---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { SITE_URL } from "../lib/config";

const {
  title,
  description,
  canonical,
  ogImage,
  jsonLd,
  noIndex,
} = Astro.props;

const metaTitle = title
  ? `${title} | Cardrender`
  : "Cardrender - Digital Business Cards & Email Signatures for Teams";

const metaDescription =
  description ??
  "Create, manage, and share digital business cards and email signatures for your team. Track engagement, enforce branding, and scale your outreach.";

const canonicalUrl = canonical ?? new URL(Astro.url.pathname, SITE_URL).toString();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <meta name="keywords" content="digital business cards, team branding, email signatures, contact sharing, card analytics" />
    <meta name="robots" content={noIndex ? "noindex, nofollow" : "index, follow"} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta property="og:site_name" content="Cardrender" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={metaTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:url" content={canonicalUrl} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    <meta name="twitter:description" content={metaDescription} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    <link rel="alternate" href={canonicalUrl} hreflang="en" />
    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}
  </head>
  <body>
    <a class="skip-link" href="#main">Skip to content</a>
    <Header currentPath={Astro.url.pathname} />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    left: -999px;
    top: 0.5rem;
    background: var(--ink);
    color: var(--surface);
    padding: 0.5rem 1rem;
    border-radius: 999px;
    z-index: 999;
  }
  .skip-link:focus {
    left: 1rem;
  }
</style>
