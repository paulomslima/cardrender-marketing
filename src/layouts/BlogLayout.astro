---
import BaseLayout from "./BaseLayout.astro";
import { Clock, Calendar, ArrowLeft, Share2, Tag } from "lucide-astro";

const { 
  title, 
  description, 
  date, 
  readTime, 
  jsonLd, 
  author = "Cardrender Team", 
  category = "Product",
  keywords = []
} = Astro.props;

// Generate Open Graph and Twitter meta tags for social sharing
const siteUrl = "https://cardrender.com";
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const ogImage = `${siteUrl}/og-image.jpg`; // Default OG image
---

<BaseLayout title={title} description={description} jsonLd={jsonLd}>
  <!-- Enhanced SEO Meta Tags -->
  <Fragment slot="head">
    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />
    
    <!-- Keywords -->
    {keywords.length > 0 && (
      <meta name="keywords" content={keywords.join(", ")} />
    )}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="article:published_time" content={jsonLd?.datePublished || ""} />
    <meta property="article:modified_time" content={jsonLd?.dateModified || ""} />
    <meta property="article:author" content={author} />
    <meta property="article:section" content={category} />
    {keywords.map((keyword) => (
      <meta property="article:tag" content={keyword} />
    ))}
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Additional SEO -->
    <meta name="author" content={author} />
    <meta name="article:published_time" content={jsonLd?.datePublished || ""} />
  </Fragment>

  <article class="blog-article-page">
    <!-- Breadcrumb Navigation for SEO -->
    <nav class="container breadcrumb-nav" aria-label="Breadcrumb">
      <ol itemscope itemtype="https://schema.org/BreadcrumbList">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a itemprop="item" href="/">
            <span itemprop="name">Home</span>
          </a>
          <meta itemprop="position" content="1" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a itemprop="item" href="/blog">
            <span itemprop="name">Blog</span>
          </a>
          <meta itemprop="position" content="2" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name">{title}</span>
          <meta itemprop="position" content="3" />
        </li>
      </ol>
    </nav>

    <!-- Back Navigation -->
    <div class="container article-nav">
      <a href="/blog" class="back-link">
        <ArrowLeft size={18} />
        <span>Back to blog</span>
      </a>
    </div>

    <!-- Article Header -->
    <header class="article-header">
      <div class="container article-header-content">
        <div class="article-category">{category}</div>
        <h1 class="article-title">{title}</h1>
        <p class="article-description">{description}</p>
        <div class="article-meta">
          <div class="meta-item">
            <Calendar size={16} />
            <span>{date}</span>
          </div>
          <div class="meta-divider">·</div>
          <div class="meta-item">
            <Clock size={16} />
            <span>{readTime}</span>
          </div>
          <div class="meta-divider">·</div>
          <div class="meta-item">
            <span class="author-name">By {author}</span>
          </div>
        </div>
        
        <!-- Keywords/Tags Display -->
        {keywords.length > 0 && (
          <div class="article-tags">
            <Tag size={14} />
            <div class="tags-list">
              {keywords.slice(0, 5).map((keyword) => (
                <span class="tag-badge">{keyword}</span>
              ))}
            </div>
          </div>
        )}
      </div>
    </header>

    <!-- Article Body -->
    <div class="container article-container">
      <div class="article-content">
        <slot />
      </div>

      <!-- Article Footer -->
      <footer class="article-footer">
        <div class="footer-divider"></div>
        <div class="footer-content">
          <div class="share-section">
            <Share2 size={20} />
            <span class="share-text">Share this article</span>
          </div>
          <a href="/blog" class="back-to-blog">
            <ArrowLeft size={18} />
            <span>Back to all articles</span>
          </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-article-page {
    background: hsl(var(--background));
  }

  /* Breadcrumb Navigation */
  .breadcrumb-nav {
    padding: 1.5rem 0 0.5rem;
  }

  .breadcrumb-nav ol {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }

  .breadcrumb-nav li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-nav li:not(:last-child)::after {
    content: "›";
    color: hsl(var(--muted-foreground));
    font-size: 1rem;
  }

  .breadcrumb-nav a {
    color: hsl(var(--muted-foreground));
    transition: color 200ms;
  }

  .breadcrumb-nav a:hover {
    color: hsl(var(--primary));
  }

  .breadcrumb-nav li:last-child span {
    color: hsl(var(--foreground));
  }

  .article-nav {
    padding: 1rem 0 1rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(var(--muted-foreground));
    font-size: 0.875rem;
    font-weight: 600;
    transition: color 200ms;
  }

  .back-link:hover {
    color: hsl(var(--foreground));
  }

  /* Header */
  .article-header {
    padding: 3rem 0;
    border-bottom: 1px solid hsl(var(--border));
    background: linear-gradient(180deg, transparent, hsl(var(--primary) / 0.02));
  }

  .article-header-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .article-category {
    display: inline-flex;
    padding: 0.4rem 0.9rem;
    background: linear-gradient(135deg, hsl(var(--primary) / 0.1), hsl(var(--secondary) / 0.1));
    border: 1px solid hsl(var(--border));
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(var(--primary));
    margin-bottom: 1.5rem;
  }

  .article-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
    color: hsl(var(--foreground));
  }

  .article-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin-bottom: 2rem;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .meta-divider {
    color: hsl(var(--border));
  }

  .author-name {
    font-weight: 600;
  }

  /* Article Tags */
  .article-tags {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .tags-list {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .tag-badge {
    display: inline-flex;
    padding: 0.25rem 0.75rem;
    background: hsl(var(--secondary) / 0.1);
    border: 1px solid hsl(var(--border));
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: hsl(var(--secondary));
    transition: all 200ms;
  }

  .tag-badge:hover {
    background: hsl(var(--secondary) / 0.2);
    border-color: hsl(var(--secondary));
  }

  /* Content */
  .article-container {
    max-width: 800px;
    padding: 4rem 0;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: hsl(var(--foreground));
  }

  .article-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .article-content :global(h2) {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.3;
    letter-spacing: -0.02em;
    margin: 3rem 0 1.5rem;
    color: hsl(var(--foreground));
  }

  .article-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 2.5rem 0 1rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.75rem;
    line-height: 1.7;
  }

  .article-content :global(li::marker) {
    color: hsl(var(--primary));
  }

  .article-content :global(blockquote) {
    position: relative;
    margin: 2.5rem 0;
    padding: 1.5rem 2rem;
    background: linear-gradient(135deg, hsl(var(--primary) / 0.05), hsl(var(--secondary) / 0.05));
    border-left: 4px solid hsl(var(--primary));
    border-radius: 0 calc(var(--radius)) calc(var(--radius)) 0;
    font-size: 1.25rem;
    font-weight: 500;
    font-style: italic;
    line-height: 1.7;
    color: hsl(var(--foreground));
  }

  .article-content :global(code) {
    padding: 0.2rem 0.4rem;
    background: hsl(var(--muted) / 0.2);
    border-radius: 0.25rem;
    font-size: 0.9em;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  .article-content :global(pre) {
    margin: 2rem 0;
    padding: 1.5rem;
    background: hsl(var(--foreground) / 0.05);
    border-radius: var(--radius);
    overflow-x: auto;
  }

  .article-content :global(pre code) {
    padding: 0;
    background: transparent;
  }

  .article-content :global(a) {
    color: hsl(var(--primary));
    font-weight: 600;
    text-decoration: underline;
    text-decoration-color: hsl(var(--primary) / 0.3);
    text-underline-offset: 0.2em;
    transition: text-decoration-color 200ms;
  }

  .article-content :global(a:hover) {
    text-decoration-color: hsl(var(--primary));
  }

  .article-content :global(strong) {
    font-weight: 700;
    color: hsl(var(--foreground));
  }

  /* Footer */
  .article-footer {
    margin-top: 4rem;
  }

  .footer-divider {
    height: 1px;
    background: hsl(var(--border));
    margin-bottom: 2rem;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .share-section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: hsl(var(--foreground));
    font-weight: 600;
  }

  .share-text {
    font-size: 0.875rem;
  }

  .back-to-blog {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    color: hsl(var(--foreground));
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 200ms;
  }

  .back-to-blog:hover {
    background: hsl(var(--primary) / 0.05);
    border-color: hsl(var(--primary) / 0.3);
  }

  @media (max-width: 768px) {
    .breadcrumb-nav {
      padding: 1rem 0 0.5rem;
    }

    .breadcrumb-nav ol {
      font-size: 0.8125rem;
      flex-wrap: wrap;
    }

    .article-nav {
      padding: 0.75rem 0 1rem;
    }

    .article-header {
      padding: 2rem 0;
    }

    .article-title {
      font-size: clamp(1.75rem, 7vw, 2.5rem);
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }

    .article-description {
      font-size: 1rem;
    }

    .article-meta {
      font-size: 0.8125rem;
      gap: 0.75rem;
    }

    .article-container {
      padding: 3rem 0;
      overflow-x: hidden;
    }

    .article-content {
      font-size: 1.0625rem;
      overflow-wrap: break-word;
      word-wrap: break-word;
    }

    .article-content :global(h2) {
      font-size: 1.75rem;
      margin: 2.5rem 0 1rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .article-content :global(h3) {
      font-size: 1.375rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .article-content :global(blockquote) {
      padding: 1rem 1.25rem;
      font-size: 1.0625rem;
      margin: 2rem -1rem;
    }

    .article-content :global(pre) {
      margin-left: -1rem;
      margin-right: -1rem;
      border-radius: 0;
      overflow-x: auto;
    }

    .article-content :global(table) {
      display: block;
      overflow-x: auto;
      width: 100%;
    }

    .article-content :global(img) {
      max-width: 100%;
      height: auto;
    }

    .footer-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .back-to-blog {
      width: 100%;
      justify-content: center;
    }
  }
</style>
