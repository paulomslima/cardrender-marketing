---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { BookOpen, Clock, ArrowRight } from "lucide-astro";
import { getCollection } from "astro:content";

// Get all published Portuguese blog posts, sorted by date
const allPosts = await getCollection("blog", ({ data }) => {
  return data.published !== false && data.lang === 'pt';
});

// Sort posts by date (newest first)
const posts = allPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .map((post) => ({
    title: post.data.title,
    slug: post.slug,
    description: post.data.description,
    date: post.data.date,
    readTime: post.data.readTime,
    category: post.data.category,
  }));

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: "Blog do Cardrender",
  description: "Insights, playbooks e atualizações sobre cartões de visita digitais, branding de equipes e compartilhamento de contatos.",
  inLanguage: "pt-BR",
};
---

<BaseLayout
  title="Blog - Insights sobre Cartões de Visita Digitais"
  description="Insights, playbooks e atualizações sobre cartões de visita digitais, branding de equipes e compartilhamento de contatos."
  jsonLd={jsonLd}
>
  <section class="blog-hero-section">
    <div class="container">
      <div class="blog-hero-content">
        <div class="hero-badge">
          <BookOpen size={16} />
          <span>Blog e Recursos</span>
        </div>
        <h1 class="blog-hero-title">
          Histórias para equipes que estão <span class="gradient-text">modernizando</span> seu alcance
        </h1>
        <p class="blog-hero-description">
          Aprenda como equipes visionárias usam cartões de visita digitais, análises e modelos
          para manter a consistência e converter mais conversas em relacionamentos.
        </p>
      </div>
    </div>
  </section>

  <section class="blog-posts-section">
    <div class="container">
      <div class="blog-grid">
        {posts.map((post) => (
          <a class="blog-card-premium" href={`/pt/blog/${post.slug}`}>
            <div class="blog-card-header">
              <span class="blog-category">{post.category}</span>
              <div class="blog-meta">
                <Clock size={14} />
                <span>{post.readTime}</span>
              </div>
            </div>
            <h3 class="blog-card-title">{post.title}</h3>
            <p class="blog-card-description">{post.description}</p>
            <div class="blog-card-footer">
              <span class="blog-date">{post.date}</span>
              <span class="blog-read-more">
                Ler artigo
                <ArrowRight size={16} />
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-hero-section {
    padding: 6rem 0 4rem;
    text-align: center;
  }
  
  .blog-hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .blog-hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }
  
  .blog-hero-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: hsl(var(--muted-foreground));
  }
  
  .blog-posts-section {
    padding: 4rem 0 6rem;
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 2rem;
  }
  
  .blog-card-premium {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    text-decoration: none;
    transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .blog-card-premium:hover {
    border-color: hsl(var(--primary));
    box-shadow: 0 8px 16px hsl(var(--primary) / 0.1);
    transform: translateY(-2px);
  }
  
  .blog-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1rem;
  }
  
  .blog-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(var(--primary));
    background: hsl(var(--primary) / 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
  }
  
  .blog-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  .blog-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: hsl(var(--foreground));
    line-height: 1.3;
  }
  
  .blog-card-description {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  
  .blog-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 1rem;
    border-top: 1px solid hsl(var(--border));
  }
  
  .blog-date {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  .blog-read-more {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: hsl(var(--primary));
  }
  
  @media (max-width: 768px) {
    .blog-hero-section {
      padding: 4rem 0 3rem;
    }
    
    .blog-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
