---
import { getCollection } from "astro:content";
import DocsLayout from "../../../layouts/DocsLayout.astro";
import DocsEntry from "../../../components/DocsEntry.astro";

export const prerender = true;

export async function getStaticPaths() {
  const docsEntries = await getCollection("docs", ({ data }) => {
    // Only get Spanish docs
    return data.lang === 'es';
  });
  
  return docsEntries.map((entry) => {
    // Extract slug from folder path (e.g., "es/getting-started" -> "getting-started")
    const slug = entry.slug.split('/').pop();
    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<DocsEntry entry={entry} Content={Content} />
