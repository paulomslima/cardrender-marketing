---
import { getCollection } from "astro:content";
import DocsLayout from "../../layouts/DocsLayout.astro";
import { defaultLang } from "../../lib/i18n";

export const prerender = true;

export async function getStaticPaths() {
  const docsEntries = await getCollection("docs", ({ data }) => {
    // Only get docs for default language (English)
    return data.lang === defaultLang;
  });
  
  return docsEntries.map((entry) => {
    // Extract slug from folder path (e.g., "en/getting-started" -> "getting-started")
    const slug = entry.slug.split('/').pop();
    return {
      params: { slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Generate enhanced jsonLd for SEO
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "TechArticle",
  headline: entry.data.title,
  description: entry.data.description,
  dateModified: new Date(entry.data.lastUpdated).toISOString(),
  author: {
    "@type": "Organization",
    name: "Cardrender",
    url: "https://cardrender.com",
  },
  keywords: entry.data.keywords.join(", "),
  articleSection: entry.data.category,
  proficiencyLevel: entry.data.proficiencyLevel,
  inLanguage: "en-US",
};
---

<DocsLayout title={entry.data.title} description={entry.data.description}>
  <div class="docs-header">
    {entry.data.category && (
      <span class="docs-category-badge">
        {entry.data.category}
      </span>
    )}
    {entry.data.proficiencyLevel && (
      <span class="docs-level-badge">
        {entry.data.proficiencyLevel}
      </span>
    )}
  </div>
  
  <h1 class="docs-title">{entry.data.title}</h1>
  <p class="docs-description">{entry.data.description}</p>
  <div class="docs-meta">
    <span>Last updated: {new Date(entry.data.lastUpdated).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
  </div>

  <div class="docs-prose">
    <Content />
  </div>

  {entry.data.relatedDocs && entry.data.relatedDocs.length > 0 && (
    <div class="docs-related">
      <h3 class="docs-related-title">Related Documentation</h3>
      <div class="docs-related-grid">
        {entry.data.relatedDocs.map((doc) => (
          <a href={doc.url} class="docs-related-card">
            <span class="docs-related-icon">â†’</span>
            <span class="docs-related-text">{doc.title}</span>
          </a>
        ))}
      </div>
    </div>
  )}
</DocsLayout>

<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

<style>
  .docs-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .docs-category-badge,
  .docs-level-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.375rem 0.875rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .docs-category-badge {
    background: hsl(var(--primary) / 0.1);
    color: hsl(var(--primary));
  }
  
  .docs-level-badge {
    background: hsl(var(--secondary) / 0.1);
    color: hsl(var(--secondary));
  }
  
  .docs-title {
    font-size: 3rem;
    font-weight: 800;
    line-height: 1.1;
    margin: 0 0 1.25rem 0;
    color: hsl(var(--foreground));
    letter-spacing: -0.02em;
  }
  
  .docs-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: hsl(var(--muted-foreground));
    margin: 0 0 1rem 0;
    font-weight: 400;
  }
  
  .docs-meta {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
    padding-bottom: 2.5rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid hsl(var(--border) / 0.5);
  }
  
  .docs-prose {
    color: hsl(var(--foreground));
    font-size: 1.0625rem;
    line-height: 1.8;
    max-width: 75ch;
  }
  
  .docs-prose :global(h2) {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid hsl(var(--border) / 0.5);
    scroll-margin-top: 6rem;
    letter-spacing: -0.02em;
    color: hsl(var(--foreground));
  }
  
  .docs-prose :global(h2:first-child) {
    margin-top: 0;
    border-top: none;
    padding-top: 0;
  }
  
  .docs-prose :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    scroll-margin-top: 6rem;
    letter-spacing: -0.01em;
    color: hsl(var(--foreground));
  }
  
  .docs-prose :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    scroll-margin-top: 6rem;
    color: hsl(var(--foreground));
  }
  
  .docs-prose :global(p) {
    margin: 1.25rem 0;
    line-height: 1.75;
    color: hsl(var(--foreground) / 0.92);
  }
  
  .docs-prose :global(p:first-of-type) {
    font-size: 1.125rem;
    color: hsl(var(--foreground) / 0.85);
    line-height: 1.7;
  }
  
  .docs-prose :global(ul),
  .docs-prose :global(ol) {
    margin: 1.25rem 0;
    padding-left: 1.5rem;
  }
  
  .docs-prose :global(li) {
    margin: 0.625rem 0;
    line-height: 1.65;
    color: hsl(var(--foreground) / 0.92);
  }
  
  .docs-prose :global(li::marker) {
    color: hsl(var(--muted-foreground) / 0.7);
  }
  
  .docs-prose :global(li > ul),
  .docs-prose :global(li > ol) {
    margin: 0.5rem 0;
  }
  
  .docs-prose :global(ul > li) {
    padding-left: 0.375rem;
  }
  
  .docs-prose :global(strong) {
    font-weight: 600;
    color: hsl(var(--foreground));
  }
  
  .docs-prose :global(code) {
    background: hsl(var(--primary) / 0.08);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.9em;
    font-family: 'SF Mono', 'Monaco', 'Consolas', 'Courier New', monospace;
    color: hsl(var(--primary));
    font-weight: 500;
  }
  
  .docs-prose :global(pre) {
    background: hsl(var(--foreground) / 0.04);
    border: 1px solid hsl(var(--border) / 0.4);
    border-radius: 0.5rem;
    padding: 1.25rem 1.5rem;
    margin: 1.75rem 0;
    overflow-x: auto;
    line-height: 1.5;
    box-shadow: 0 1px 2px hsl(var(--foreground) / 0.04);
  }
  
  .docs-prose :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
    font-size: 0.875rem;
    color: hsl(var(--foreground) / 0.9);
    font-weight: 400;
    letter-spacing: -0.01em;
  }
  
  .docs-prose :global(blockquote) {
    border-left: 3px solid hsl(var(--primary));
    margin: 1.75rem 0;
    font-style: normal;
    color: hsl(var(--foreground) / 0.85);
    background: hsl(var(--primary) / 0.04);
    padding: 1.125rem 1.5rem;
    border-radius: 0.5rem;
    font-size: 0.9375rem;
  }
  
  .docs-prose :global(blockquote p) {
    margin: 0.5rem 0;
  }
  
  .docs-prose :global(blockquote strong) {
    color: hsl(var(--primary));
  }
  
  .docs-prose :global(a) {
    color: hsl(var(--primary));
    text-decoration: none;
    border-bottom: 1px solid hsl(var(--primary) / 0.3);
    transition: all 150ms;
    font-weight: 500;
  }
  
  .docs-prose :global(a:hover) {
    border-bottom-color: hsl(var(--primary));
    color: hsl(var(--primary) / 0.8);
  }
  
  .docs-prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    font-size: 0.9375rem;
  }
  
  .docs-prose :global(th) {
    text-align: left;
    padding: 0.75rem 1rem;
    background: hsl(var(--muted) / 0.1);
    border: 1px solid hsl(var(--border) / 0.5);
    font-weight: 600;
    font-size: 0.875rem;
    color: hsl(var(--foreground));
  }
  
  .docs-prose :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid hsl(var(--border) / 0.5);
    color: hsl(var(--foreground) / 0.92);
  }
  
  .docs-prose :global(tr:hover) {
    background: hsl(var(--muted) / 0.05);
  }
  
  .docs-prose :global(hr) {
    border: none;
    border-top: 1px solid hsl(var(--border) / 0.5);
    margin: 3rem 0;
  }
  
  .docs-related {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid hsl(var(--border) / 0.5);
  }
  
  .docs-related-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: hsl(var(--foreground));
  }
  
  .docs-related-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
  
  .docs-related-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border) / 0.5);
    border-radius: 12px;
    transition: all 200ms cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
  }
  
  .docs-related-card:hover {
    background: hsl(var(--card));
    border-color: hsl(var(--primary));
    transform: translateY(-2px);
    box-shadow: 0 8px 24px hsl(var(--primary) / 0.12);
  }
  
  .docs-related-icon {
    font-size: 1.5rem;
    color: hsl(var(--primary));
    transition: transform 200ms;
    flex-shrink: 0;
  }
  
  .docs-related-card:hover .docs-related-icon {
    transform: translateX(4px);
  }
  
  .docs-related-text {
    font-weight: 500;
    color: hsl(var(--foreground));
    font-size: 0.9375rem;
  }
  
  @media (max-width: 640px) {
    .docs-title {
      font-size: 2.25rem;
    }
    
    .docs-description {
      font-size: 1.0625rem;
    }
    
    .docs-prose {
      font-size: 1rem;
    }
    
    .docs-prose :global(h2) {
      font-size: 1.625rem;
      margin-top: 3rem;
    }
    
    .docs-prose :global(h3) {
      font-size: 1.25rem;
      margin-top: 2rem;
    }
    
    .docs-related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
