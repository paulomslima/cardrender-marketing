  .legal {
    padding: 3rem 1.5rem 4rem;
  }
  .container {
    max-width: 900px;
    margin: 0 auto;
  }
  h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
  }
  .lede {
    font-size: 1.05rem;
    color: var(--muted-foreground, #475569);
    margin-bottom: 1.5rem;
  }
  h2 {
    margin-top: 1.75rem;
    margin-bottom: 0.75rem;
    font-size: 1.25rem;
  }
  p {
    line-height: 1.7;
    margin-bottom: 1rem;
  }
  ul {
    margin: 0 0 1rem 1.1rem;
    padding-left: 0.9rem;
    list-style: disc;
    line-height: 1.6;
  }
  li + li {
    margin-top: 0.4rem;
  }
  a {
    color: var(--primary, #0f172a);
  }
</style>
