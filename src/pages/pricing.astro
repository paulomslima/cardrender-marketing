---
import BaseLayout from "../layouts/BaseLayout.astro";
import { fetchPlans, formatPrice } from "../lib/plans";
import { APP_URL } from "../lib/config";
import { Check, X, Sparkles, MessageCircle, Zap, Shield, Users, Crown } from "lucide-astro";

export const prerender = false;

const { plans, error } = await fetchPlans();

const activePlans = plans
  .filter((plan) => plan.isActive)
  .sort((a, b) => (a.displayOrder ?? 0) - (b.displayOrder ?? 0));

const mostPopularId = "professional";

const toLimit = (value: number | null, suffix: string) => {
  if (value === null) return `Custom ${suffix}`;
  if (value === -1) return `Unlimited ${suffix}`;
  return `${value} ${suffix}`;
};

const allFeatures = [
  { icon: Users, text: "Team directory and member management" },
  { icon: Zap, text: "Customizable card templates" },
  { icon: MessageCircle, text: "Email signature builder" },
  { icon: Shield, text: "QR code sharing and wallet passes" },
  { icon: Crown, text: "Workspace analytics dashboard" },
  { icon: Check, text: "Role-based access controls" },
];

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: "Cardrender",
  description: "Digital business cards, email signatures, and team identity management for modern companies.",
  offers: activePlans.map((plan) => ({
    "@type": "Offer",
    name: plan.name,
    priceCurrency: "USD",
    price: plan.monthlyPriceCents ? plan.monthlyPriceCents / 100 : 0,
    availability: "https://schema.org/InStock",
  })),
};
---

<BaseLayout
  title="Simple, Transparent Pricing"
  description="Flexible plans for teams of every size. Compare features and choose the Cardrender plan that fits your organization."
  jsonLd={jsonLd}
>
  <section class="pricing-hero-section">
    <div class="container">
      <div class="hero-content-pricing">
        <div class="hero-badge">
          <Sparkles size={16} />
          <span>Simple, transparent pricing</span>
        </div>
        <h1 class="hero-title-pricing">
          Plans that scale with your <span class="gradient-text">business</span>
        </h1>
        <p class="hero-description-pricing">
          Start free, scale to enterprise. Every plan includes our core features with no hidden fees.
          Upgrade anytime as your team grows.
        </p>
      </div>
      <div class="enterprise-card">
        <div class="enterprise-icon">
          <Crown size={32} />
        </div>
        <h3>Need enterprise support?</h3>
        <p class="muted">
          SSO, custom security reviews, dedicated success manager, and tailored onboarding for teams of 100+.
        </p>
        <a class="button secondary" href={`${APP_URL}/register`}>Talk to sales</a>
      </div>
    </div>
  </section>

  <section class="pricing-cards-section">
    <div class="container">
      {error && (
        <div class="card">
          <p>{error}. Please refresh or contact support.</p>
        </div>
      )}
      {!error && (
        <div class="pricing-grid-premium">
          {activePlans.map((plan) => (
            <div class={`pricing-card-premium ${plan.id === mostPopularId ? "popular" : ""}`}>
              {plan.id === mostPopularId && (
                <div class="popular-badge">
                  <Sparkles size={14} />
                  Most popular
                </div>
              )}
              <div class="plan-header">
                <h3 class="plan-name">{plan.name}</h3>
                <p class="plan-description">{plan.description ?? "Build a consistent digital presence for your team."}</p>
              </div>
              <div class="price-section">
                <div class="price-row">
                  <span class="price">{formatPrice(plan.monthlyPriceCents)}</span>
                  {plan.monthlyPriceCents > 0 && <span class="price-period">/month</span>}
                </div>
                <p class="price-note">per user, billed monthly</p>
              </div>
              <a class="button primary full-width" href={`${APP_URL}/register`}>
                Get started
              </a>
              <div class="features-divider"></div>
              <ul class="plan-features-premium">
                <li>
                  {plan.maxSeats === -1 || plan.maxSeats > 0 ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{toLimit(plan.maxSeats, "team members")}</span>
                </li>
                <li>
                  {plan.maxCards === -1 || plan.maxCards > 0 ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{toLimit(plan.maxCards, "cards per user")}</span>
                </li>
                <li>
                  {plan.maxSignatures === -1 || plan.maxSignatures > 0 ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{toLimit(plan.maxSignatures, "email signatures")}</span>
                </li>
                <li>
                  {plan.maxLinks === -1 || plan.maxLinks > 0 ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{toLimit(plan.maxLinks, "custom links")}</span>
                </li>
                <li>
                  {plan.maxStorageMb === -1 || plan.maxStorageMb > 0 ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{toLimit(plan.maxStorageMb, "MB storage")}</span>
                </li>
                <li>
                  {plan.customBranding ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Custom branding</span>
                </li>
                <li>
                  {plan.customDomain ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Custom domain</span>
                </li>
                <li>
                  {plan.premiumTemplates ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Premium templates</span>
                </li>
                <li>
                  {plan.headerCustomization ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Header customization</span>
                </li>
                <li>
                  {plan.directoryEnabled ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Team directory</span>
                </li>
                <li>
                  {plan.analyticsEnabled ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>{plan.advancedAnalytics ? "Advanced analytics" : "Basic analytics"}</span>
                </li>
                <li>
                  {plan.leadCapture ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Lead capture forms</span>
                </li>
                <li>
                  {plan.apiAccess ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>API access</span>
                </li>
                <li>
                  {plan.webhooks ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Webhooks</span>
                </li>
                <li>
                  {plan.ssoEnabled ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>SSO/SAML</span>
                </li>
                <li>
                  {plan.whiteLabel ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>White-label branding</span>
                </li>
                <li>
                  {plan.prioritySupport ? <Check size={18} /> : <X size={18} class="text-destructive" />}
                  <span>Priority support</span>
                </li>
              </ul>
            </div>
          ))}
        </div>
      )}
    </div>
  </section>

  <section class="features-included-section">
    <div class="container">
      <div class="section-header-center">
        <span class="eyebrow">
          <Check size={16} />
          Included in every plan
        </span>
        <h2>Everything you need to roll out at scale</h2>
        <p class="section-subtitle">
          Every plan includes team management, branded templates, and secure sharing. No feature gates.
        </p>
      </div>
      <div class="features-grid-included">
        {allFeatures.map((feature) => (
          <div class="feature-item-included">
            <div class="feature-icon-small">
              <feature.icon size={20} />
            </div>
            <span>{feature.text}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="faq-section">
    <div class="container">
      <div class="section-header-center">
        <span class="eyebrow">FAQ</span>
        <h2>Pricing questions</h2>
      </div>
      <div class="faq-grid">
        <div class="faq-card">
          <h3>Can I change plans later?</h3>
          <p class="muted">Yes. You can upgrade or downgrade at any time from the admin dashboard. Changes take effect immediately.</p>
        </div>
        <div class="faq-card">
          <h3>Do you offer custom onboarding?</h3>
          <p class="muted">Enterprise customers receive dedicated onboarding, migration support, and rollout planning with a success manager.</p>
        </div>
        <div class="faq-card">
          <h3>Is there a free trial?</h3>
          <p class="muted">Every new workspace starts with a 14-day free trial of our Professional plan. No credit card required to start.</p>
        </div>
        <div class="faq-card">
          <h3>What payment methods do you accept?</h3>
          <p class="muted">We accept all major credit cards, ACH transfers for annual plans, and purchase orders for enterprise customers.</p>
        </div>
        <div class="faq-card">
          <h3>Can I pay annually?</h3>
          <p class="muted">Yes! Annual plans get 20% off. Switch to annual billing from your dashboard at any time.</p>
        </div>
        <div class="faq-card">
          <h3>What happens if I exceed my limits?</h3>
          <p class="muted">We'll notify you and offer an upgrade path. No features are shut off without warning.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .pricing-hero-section {
    padding: 6rem 0 4rem;
  }
  
  .hero-content-pricing {
    max-width: 700px;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .hero-title-pricing {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }
  
  .hero-description-pricing {
    font-size: 1.125rem;
    line-height: 1.7;
    color: hsl(var(--muted-foreground));
  }
  
  .enterprise-card {
    max-width: 500px;
    margin: 0 auto;
    padding: 2.5rem;
    background: linear-gradient(135deg, hsl(var(--primary) / 0.05), hsl(var(--secondary) / 0.05));
    border: 1px solid hsl(var(--border));
    border-radius: calc(var(--radius) + 0.5rem);
    text-align: center;
  }
  
  .enterprise-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--secondary)));
    border-radius: var(--radius);
    color: white;
  }
  
  /* Pricing Cards */
  .pricing-cards-section {
    padding: 4rem 0;
  }
  
  .pricing-grid-premium {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .pricing-card-premium {
    position: relative;
    padding: 2.5rem;
    background: hsl(var(--card));
    border: 2px solid hsl(var(--border));
    border-radius: calc(var(--radius) + 0.5rem);
    transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .pricing-card-premium:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px hsl(var(--foreground) / 0.1), 0 8px 10px -6px hsl(var(--foreground) / 0.1);
  }
  
  .pricing-card-premium.popular {
    border-color: hsl(var(--primary));
    box-shadow: 0 10px 20px -5px hsl(var(--primary) / 0.2);
  }
  
  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 1rem;
    background: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--secondary)));
    color: white;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .plan-header {
    margin-bottom: 2rem;
  }
  
  .plan-name {
    font-size: 1.75rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }
  
  .plan-description {
    color: hsl(var(--muted-foreground));
    line-height: 1.6;
  }
  
  .price-section {
    margin-bottom: 2rem;
  }
  
  .price-row {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  .price {
    font-size: 3rem;
    font-weight: 800;
    color: hsl(var(--foreground));
  }
  
  .price-period {
    font-size: 1rem;
    color: hsl(var(--muted-foreground));
  }
  
  .price-note {
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
  }
  
  .full-width {
    width: 100%;
  }
  
  .features-divider {
    height: 1px;
    background: hsl(var(--border));
    margin: 2rem 0;
  }
  
  .plan-features-premium {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 1rem;
  }
  
  .plan-features-premium li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: hsl(var(--foreground));
  }
  
  .plan-features-premium li svg {
    flex-shrink: 0;
    color: hsl(var(--secondary));
  }
  
  /* Features Included */
  .features-included-section {
    padding: 6rem 0;
    background: linear-gradient(180deg, transparent, hsl(var(--primary) / 0.02), transparent);
  }
  
  .features-grid-included {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .feature-item-included {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    transition: all 200ms;
  }
  
  .feature-item-included:hover {
    border-color: hsl(var(--primary) / 0.3);
  }
  
  .feature-icon-small {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: hsl(var(--primary) / 0.1);
    border-radius: calc(var(--radius) - 2px);
    color: hsl(var(--primary));
  }
  
  /* FAQ */
  .faq-section {
    padding: 6rem 0;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .faq-card {
    padding: 2rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
  }
  
  .faq-card h3 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }
  
  @media (max-width: 768px) {
    .pricing-hero-section {
      padding: 4rem 0 3rem;
    }
    
    .pricing-grid-premium {
      grid-template-columns: 1fr;
    }
    
    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
