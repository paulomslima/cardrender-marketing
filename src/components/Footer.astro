---
import { APP_URL } from "../lib/config";
import { getLangFromUrl, useTranslations, getLocalizedPath } from "../lib/i18n";

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="brand">
        <img src="/cardrender.svg" alt="CardRender" />
        <p class="muted">{t('footer.tagline')}</p>
      </div>
      <div>
        <h4>{t('footer.product')}</h4>
        <a href={getLocalizedPath('/pricing', currentLang)}>{t('nav.pricing')}</a>
        <a href={getLocalizedPath('/docs', currentLang)}>Documentation</a>
        <a href={getLocalizedPath('/blog', currentLang)}>{t('nav.blog')}</a>
      </div>
      <div>
        <h4>{t('footer.company')}</h4>
        <a href={`${APP_URL}/register`}>{t('auth.startFree')}</a>
        <a href={`${APP_URL}/login`}>{t('auth.signIn')}</a>
        <a href={getLocalizedPath('/docs/getting-started', currentLang)}>Onboarding</a>
      </div>
      <div>
        <h4>{t('footer.legal')}</h4>
        <a href={getLocalizedPath('/docs/security', currentLang)}>Security</a>
        <a href={getLocalizedPath('/docs/api', currentLang)}>API</a>
        <a href={getLocalizedPath('/docs/analytics', currentLang)}>Analytics</a>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="muted">Â© {new Date().getFullYear()} CardRender. All rights reserved.</p>
      <p class="muted">Built for teams who care about their digital presence.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding: 4rem 0 3rem;
    border-top: 1px solid hsl(var(--border) / 0.4);
    background: hsl(var(--card));
    margin-top: 6rem;
  }
  .footer-grid {
    display: grid;
    gap: 3rem;
    grid-template-columns: 2fr repeat(3, 1fr);
    margin-bottom: 3rem;
  }
  .brand img {
    height: 32px;
    margin-bottom: 1rem;
  }
  .brand p {
    max-width: 320px;
    line-height: 1.6;
    font-size: 0.9375rem;
    color: hsl(var(--muted-foreground));
  }
  h4 {
    margin: 0 0 1rem;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: hsl(var(--foreground));
  }
  a {
    display: block;
    color: hsl(var(--muted-foreground));
    margin-bottom: 0.375rem;
    padding: 0.375rem 0;
    font-size: 0.9375rem;
    transition: color 150ms;
  }
  a:hover {
    color: hsl(var(--primary));
  }
  .footer-bottom {
    margin-top: 3rem;
    padding-top: 2.5rem;
    border-top: 1px solid hsl(var(--border) / 0.3);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  .footer-bottom p {
    margin: 0;
    font-size: 0.875rem;
  }
  @media (max-width: 900px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
    .brand {
      grid-column: 1 / -1;
    }
  }
  @media (max-width: 640px) {
    .site-footer {
      padding: 3rem 0 2rem;
      margin-top: 4rem;
    }
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-bottom {
      flex-direction: column;
      text-align: center;
      padding-top: 2rem;
    }
  }
</style>
