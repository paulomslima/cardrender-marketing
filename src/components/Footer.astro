---
import { APP_URL } from "../lib/config";
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="brand">
        <img src="/cardrender.svg" alt="Cardrender" />
        <p class="muted">
          Digital business cards, email signatures, and team identity management for modern companies.
        </p>
      </div>
      <div>
        <h4>Product</h4>
        <a href="/pricing">Pricing</a>
        <a href="/docs">Documentation</a>
        <a href="/blog">Blog</a>
      </div>
      <div>
        <h4>Company</h4>
        <a href={`${APP_URL}/register`}>Get started</a>
        <a href={`${APP_URL}/login`}>Sign in</a>
        <a href="/docs/getting-started">Onboarding</a>
      </div>
      <div>
        <h4>Legal</h4>
        <a href="/docs/security">Security</a>
        <a href="/docs/api">API</a>
        <a href="/docs/analytics">Analytics</a>
      </div>
    </div>
    <div class="footer-bottom">
      <p class="muted">Â© {new Date().getFullYear()} Cardrender. All rights reserved.</p>
      <p class="muted">Built for teams who care about their digital presence.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding: 3.5rem 0 2.5rem;
    border-top: 1px solid var(--border);
    background: #ffffff;
  }
  .footer-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  }
  .brand img {
    height: 32px;
    margin-bottom: 1rem;
  }
  h4 {
    margin: 0 0 0.7rem;
  }
  a {
    display: block;
    color: var(--muted);
    margin-bottom: 0.5rem;
  }
  a:hover {
    color: var(--ink);
  }
  .footer-bottom {
    margin-top: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 1rem;
  }
  @media (max-width: 600px) {
    .footer-bottom {
      flex-direction: column;
    }
  }
</style>
